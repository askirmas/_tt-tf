{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "array",
  "items": {
    "$ref": "#/definitions/tRecord"
  },
  "definitions": {
    "tRecord": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {"type": "string"},
        "position": {"type": "string"},
        "id": {"type": "number"},
        "address": {"type": "string"},
        "company": {"type": "string"},
        "companyAdress": {"type": "string"},
        "location": {"type": "string"},
        "phone": {
          "type": "string",
          "pattern": "^[\\d\\(\\)\\+\\s\\-]+$"
        }
      }
    }
  }
}